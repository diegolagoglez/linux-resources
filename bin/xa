#!/bin/bash

VERSION="0.2.0 20170303"

DEFAULT_FILE="."
XA_SHOW_PATHS=
XA_COLOR=

COLOR_FILE=
COLOR_ATTR_NAME=
COLOR_ATTR_VALUE=
COLOR_RESET="\e[0m"

function error() {
	echo "ERROR: $1" 1>&2
	if [[ $2 =~ [0-9]+ ]]; then
		exit $2
	fi
}

function assign_colors() {
	if [ ! -z "$XA_COLOR" ]; then
		COLOR_FILE="\e[0;90m"
		COLOR_ATTR_NAME="\e[0;91m"
		COLOR_ATTR_VALUE="\e[0;94m" # Not used currently.
	else
		COLOR_FILE=
		COLOR_ATTR_NAME=
		COLOR_ATTR_VALUE=
	fi
}

function require() {
	if ! type "$1" >/dev/null 2>&1; then
		error "Command '$1' is required." 1
	fi
}

function usage() {
	echo "$(basename -- $0) v$VERSION - Utility to manage inode's extended attributes (user namespace)."
	echo "GPLv3 - Diego Lago Gonz√°lez <diego.lago.gonzalez@gmail.com>"
	echo "Usage: `basename $0` [options] <command> [<path> [...]]"
	echo "Commands:"
	echo "  ls|list              List file extended attributes."
	echo "  show                 Show all file extended attributes."
	echo "  set|s <name> <value> Set attribute <name> with value <value>."
	echo "  get|g <name>         Get attribute <name>."
	echo "  rm <name>            Remove attribute <name>."
	echo "  clear                Remove all attributes."
	echo "  help                 Show this help and exit."
	echo "Options:"
	echo "  -h                   Show this help and exit."
	echo "  -p                   Show path before attributes (set XA_SHOW_PATHS variable)."
	echo "  -P                   Hide path before attributes (unset XA_SHOW_PATHS variable)."
	echo "  -c                   Use colors (set XA_COLOR variable)."
	echo "  -C                   Do not use color (unset XA_COLOR variable)."
}

function show_path_if_needed() {
	if [ ! -z "$XA_SHOW_PATHS" ]; then
		echo -e "${COLOR_FILE}# ${1}${COLOR_RESET}"
	fi
}

function list_attributes() {
	require attr
	local paths=($@)
	if [ ${#paths[@]} == 0 ]; then
		paths=(".")
	fi
	for f in ${paths[@]}; do
		show_path_if_needed $f
		attr -ql "$f"
	done
}

function show_attributes() {
	require attr
	local paths=($@)
	if [ ${#paths[@]} == 0 ]; then
		paths=(".")
	fi
	for f in ${paths[@]}; do
		show_path_if_needed $f
		attr -ql "$f" | while read; do
			echo -ne "${COLOR_ATTR_NAME}${REPLY}${COLOR_RESET} "
			attr -qg "$REPLY" "$f"
			echo
		done
	done
}

function get_attribute() {
	require attr
	local name="$1"
	shift
	local paths=($@)
	if [ ${#paths[@]} == 0 ]; then
		paths=(".")
	fi
	for f in ${paths[@]}; do
		show_path_if_needed "$f"
		attr -qg "$name" "$f" || return $?
		echo
	done
}

function set_attribute() {
	require attr
	local name="$1"
	local value="$2"
	shift 2
	local paths=($@)
	if [ ${#paths[@]} == 0 ]; then
		paths=(".")
	fi
	for f in ${paths[@]}; do
		attr -qs "$name" -V "$value" "$f"
	done
}

function remove_attributes() {
	require attr
	local name="$1"
	shift
	local paths=($@)
	if [ ${#paths[@]} == 0 ]; then
		paths=(".")
	fi
	for f in ${paths[@]}; do
		attr -qr "$name" "$f" || return $?
	done
}

function clear_attributes() {
	require attr
	local paths=($@)
	if [ ${#paths[@]} == 0 ]; then
		paths=(".")
	fi
	for f in ${paths[@]}; do
		attr -ql "$f" | while read; do
			attr -qr "$REPLY" "$f"
		done
	done
}

function process_options() {
	while getopts ":cChpP" opt; do
		case "$opt" in
			c)
				XA_COLOR=yes
			;;
			C)
				XA_COLOR=
			;;
			h)
				usage
				exit 1
			;;
			p)
				XA_SHOW_PATHS=yes
			;;
			P)
				XA_SHOW_PATHS=
			;;
			\?)
				error "Invalid option: -$OPTARG" 1
			;;
			:)
				error "Option -$OPTARG requires an argument." 1
			;;
		esac
	done

	return $(( OPTIND - 1 ))
}

function main() {

	process_options "$@"
	shift $?

	assign_colors

	case "$1" in
		ls|list)
			shift
			list_attributes "$@"
		;;
		show)
			shift
			show_attributes "$@"
		;;
		set|s)
			shift
			set_attribute "$@"
		;;
		get|g)
			shift
			get_attribute "$@"
		;;
		rm)
			shift
			remove_attributes "$@"
		;;
		clear)
			shift
			clear_attributes "$@"
		;;
		help)
			usage
		;;
		"")
			error "Must specify a command. Use '$(basename -- $0) help' or '$(basename -- $0) -h' to show help." 1
		;;
		*)
			error "Invalid command: $1" 1
		;;
	esac
}

main "$@"
