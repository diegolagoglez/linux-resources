[user]
	name = Diego Lago
	email = diego.lago.gonzalez@gmail.com
[core]
	editor = vim
	pager = less -FXn4
[color]
	ui = true
[alias]
	ci = commit
	co = checkout
	st = status
	s = status --short
	sb = status --short --branch
	b = branch
	ba = branch --all
	br = branch --remote
	bm = branch --merged
	bnm = branch --no-merged
	aliases = config --global --list
	graph = log --graph --oneline
	l = log --graph --pretty=\"%Cred%h %Cgreen%ad %Cblue%an%Creset %s%C(yellow)%d\" --date='format:%F %T'
	le = log --graph --pretty=\"%Cred%h %Cgreen%ai %Cblue%an <%ae>%Creset %s%C(yellow)%d\"
	ll = !N=${1:-25} && C=$(git rev-list --all --count) && git log --graph --pretty=\"%Cred%h %Cgreen%ad %Cblue%an%Creset %s%C(yellow)%d\" --date='format:%F %T' -n$N && echo -e "- [$N/$C]"
	rso = remote show origin
	bd = branch-description
	d = diff
	df = diff --color-words
	dc = diff --cached
	dfc = diff --cached --color-words
	unstage = reset HEAD
	discard = checkout --
	discard-all = !git checkout -- $(git rev-parse --show-toplevel)
	whatadded = log --diff-filter=A --
	rootpath = rev-parse --show-toplevel
	ap = add -p
	cia = commit --amend
[merge]
	commit = no
	ff = no
	log = true
[log]
	date = iso
[branch]
	autosetuprebase = always
[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = diego.lago.gonzalez@gmail.com
